---
import Button from "../ui/button/Button.astro";
import { projects } from "../../data/projects";

interface Props {
    title?: string;
}

const { title } = Astro.props as Props;
---

<section class="w-full py-16 bg-gradient-to-br from-background via-background to-background/95">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        {title && (
                <div class="text-center mb-12">
                    <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-4">
                        {title}
                    </h2>
                    <div class="w-24 h-1 bg-accent mx-auto rounded-full"></div>
                </div>
        )}

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            {projects.map((p, index) => (
                    <article class="group relative">
                        {/* Card container with hover effects */}
                        <div class="card-surface p-8 h-full relative overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-1 border border-border/50 hover:border-accent/30">

                            {/* Background decoration */}
                            <div class="absolute inset-0 bg-gradient-to-br from-accent/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

                            {/* Icon */}
                            <div class="relative z-10 mb-6 flex items-center justify-between">
                                <div class="text-accent [&>svg]:w-36 [&>svg]:h-15 transition-transform duration-300 group-hover:scale-110" set:html={p.icon} />
                                <div class="w-2 h-2 bg-accent/30 rounded-full group-hover:bg-accent transition-colors duration-300"></div>
                            </div>

                            {/* Content */}
                            <div class="relative z-10 space-y-4">
                                <div>
                                    <h3 class="text-xl font-bold text-foreground mb-2 group-hover:text-accent transition-colors duration-300">
                                        {p.title}
                                    </h3>
                                    <p class="text-sm font-medium text-accent/80 tracking-wide uppercase">
                                        {p.techStack}
                                    </p>
                                </div>

                                <p class="text-muted-foreground leading-relaxed text-[15px]">
                                    {p.description}
                                </p>
                            </div>

                            {/* CTA Button */}
                            <div class="relative z-10 mt-8 pt-6 border-t border-border/30">
                                <Button
                                        href={p.ctaLink}
                                        variant="primary"
                                        size="sm"
                                        class="w-full sm:w-auto group-hover:shadow-lg transition-all duration-300"
                                >
                <span class="flex items-center gap-2">
                  {p.ctaText}
                    <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                </span>
                                </Button>
                            </div>

                            {/* Project number indicator */}
                            <div class="absolute -top-3 -right-3 w-8 h-8 bg-accent/10 rounded-full flex items-center justify-center">
                                <span class="text-xs font-bold text-accent">{String(index + 1).padStart(2, '0')}</span>
                            </div>
                        </div>
                    </article>
            ))}
        </div>

        {/* Optional bottom CTA */}
        <div class="mt-16 text-center">
            <p class="text-muted-foreground mb-4">Want to see more of my work?</p>
            <Button href="#contact" variant="outline" size="lg">
                Let's Work Together
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </Button>
        </div>
    </div>
</section>